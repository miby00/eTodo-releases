#!/bin/sh

if [ "$1" = configure ]; then
    # Make directories
    sudo mkdir -p -m 0777 /usr/lib/eTodo/lib/eTodo-1.0.1/priv/www/linkedFiles
    sudo mkdir -p -m 0777 /usr/lib/eTodo/lib/eTodo-1.0.1/priv/www/printout
    # Set correct permissions
    sudo chmod 0777 /usr/lib/eTodo/lib/eTodo-1.0.1/priv/Icons
    sudo chmod 0777 /usr/lib/eTodo/lib/eTodo-1.0.1/priv/www/priv/css
    sudo chmod 0777 /usr/lib/eTodo/lib/eTodo-1.0.1/priv/www/priv/Icons
fi
